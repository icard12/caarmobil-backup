generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         String          @id @default(uuid())
  name       String
  category   String
  price      Float
  costPrice  Float           @default(0)
  stock      Int
  minStock   Int             @default(0)
  status     String
  image_url  String?
  created_at DateTime        @default(now())
  updated_at DateTime        @updatedAt
  isDeleted  Boolean         @default(false)
  movements  StockMovement[]
  serviceParts ServicePart[]
}

model Transaction {
  id            String   @id @default(uuid())
  type          String
  amount        Float
  costAmount    Float    @default(0)
  description   String
  category      String   @default("Diversos")
  status        String   @default("paid")
  dueDate       DateTime @default(now())
  paymentMethod String?
  date          DateTime @default(now())
  clientName    String?
}

model ServiceOrder {
  id           String    @id @default(uuid())
  clientName   String
  deviceModel  String
  description  String
  status       String
  price        Float
  cost         Float     @default(0)
  imageUrl     String?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  delivered_at DateTime?
  clientPhone  String?
  parts        ServicePart[]
}

model User {
  id               String          @id @default(uuid())
  name             String
  email            String          @unique
  password         String
  role             String
  avatar           String?
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime        @default(now())
  movements        StockMovement[]
  logs             SystemLog[]
}

model ServicePart {
  id             String       @id @default(uuid())
  serviceOrderId String
  productId      String
  quantity       Int
  unitPrice      Float
  unitCost       Float
  serviceOrder   ServiceOrder @relation(fields: [serviceOrderId], references: [id])
  product        Product      @relation(fields: [productId], references: [id])
}

model StockMovement {
  id        String   @id @default(uuid())
  productId String
  userId    String
  type      String
  quantity  Int
  reason    String?
  date      DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model PettyCash {
  id          String   @id @default(uuid())
  type        String
  amount      Float
  description String
  date        DateTime @default(now())
}

model SystemLog {
  id        String   @id @default(uuid())
  userId    String
  action    String
  category  String
  details   String
  ip        String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
